@model MvcInmo.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    var ltaInquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var inquilinoActual = ViewBag.InquilinoActual;
    var ltaInmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
    var inmuebleActual = ViewBag.inmuebleActual;
    var multa = ViewBag.multa;
}

<h1>Terminar</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Terminar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" disabled />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" disabled/>
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" disabled/>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
				<dt class = "col-sm-2">
                  Inquilino
                </dt>
                <dd class = "col-sm-10">
                  @(inquilinoActual.Nombre+" "+inquilinoActual.Apellido)
                </dd>
                <dt class = "col-sm-2">
                 Inmueble
                 </dt>
                 <dd class = "col-sm-10">
                 @(inmuebleActual.ToString())
                 </dd>
                 <dt class = "col-sm-2">
                 Multa a pagar
                 </dt>
                 <dd class = "col-sm-10">
                 @if(multa==null){
                    @Model.Precio
                 }else {
                    @multa
                 }
                 </dd>
			</div>
            <div class="form-group">
                <input type="submit" value="Terminar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

